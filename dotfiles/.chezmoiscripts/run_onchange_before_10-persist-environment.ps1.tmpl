chezmoi:template:missing-key=zero
{{- if eq "windows" .chezmoi.os -}}
{{- includeTemplate "windows/set-environment" (. | merge (dict
        "persist" true
        "set" "[Environment]::SetEnvironmentVariable(\"$name\", \"$value\", \"User\") ; $env:$name=\"$value\""
        "unset" "[Environment]::SetEnvironmentVariable(\"$name\", $null, \"User\") ; remove-item Env:$name 2>&1 | Out-Null"
        "prepend" "Prepend-Environment $name $value User,Process"
    ))
-}}
{{- end -}}
