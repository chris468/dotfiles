{{- $config := includeTemplate "config" . | fromJson -}}
- name: CHRIS468_LAZYVIM_PROFILE
  action: unset
  persist: true
- name: NVIM_APPNAME
  persist: true
{{- if $config.nvim.flavor }}
  value: {{ $config.nvim.flavor }}
{{- else }}
  action: unset
{{- end }}
- name: CHRIS468_THEME
  value: {{ $config.theme }}
- name: AWS_PROFILE
  action: unset
- name: KUBECONFIG
  action: unset
- name: IPYTHONDIR
  path: true
  value: {{ includeTemplate "path" (dict "path" "ipython" "chezmoi" .chezmoi) }}
- name: XDG_DATA_HOME
  path: true
  persist: true
  value: {{ includeTemplate "path" (dict "path" "dataHome" "chezmoi" .chezmoi) }}
- name: XDG_CONFIG_HOME
  path: true
  persist: true
  value: {{ includeTemplate "path" (dict "path" "configHome" "chezmoi" .chezmoi) }}
- name: XDG_CACHE_HOME
  path: true
  persist: true
  value: {{ includeTemplate "path" (dict "path" "cacheHome" "chezmoi" .chezmoi) }}
- name: PATH
  path: true
  action: prepend
  persist: true
  value:
{{- if $config.packageManager.homebrew.enable }}
    - {{ "bin" | joinPath (includeTemplate "path" (dict "path" "homebrew" "chezmoi" .chezmoi)) }}
{{- end }}
    - {{ includeTemplate "path" (dict "path" "bin" "chezmoi" .chezmoi) }}
    - {{ joinPath .chezmoi.homeDir ".local" "bin" }}
{{- if "windows" | eq .chezmoi.os }}
- name: PATH
  path: true
  action: append
  persist: false
  value:
    - {{ joinPath (env "PROGRAMFILES(X86)") "GnuWin32" "bin" }}
{{- end }}
