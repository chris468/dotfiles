{{- $config := includeTemplate "config" . | fromJson -}}
- name: CHRIS468_LAZYVIM_PROFILE
  action: unset
  persist: true
- name: NVIM_APPNAME
  persist: true
{{- if $config.nvim.flavor }}
  value: {{ $config.nvim.flavor }}
{{- else }}
  action: unset
{{- end }}
- name: CHRIS468_THEME
  value: {{ $config.theme }}
- name: AWS_PROFILE
  action: unset
- name: KUBECONFIG
  action: unset
- name: XDG_DATA_HOME
  path: true
  persist: true
  value: {{ joinPath .chezmoi.homeDir .path.dataHome }}
- name: XDG_CONFIG_HOME
  path: true
  persist: true
  value: {{ joinPath .chezmoi.homeDir .path.configHome }}
- name: XDG_CACHE_HOME
  path: true
  persist: true
  value: {{ joinPath .chezmoi.homeDir .path.cacheHome }}
- name: PATH
  path: true
  action: prepend
  persist: true
  value:
{{- if $config.packageManager.homebrew.enable }}
    - {{ joinPath .path.homebrew "bin" }}
{{- end }}
    - {{ joinPath .chezmoi.homeDir .path.bin }}
    - {{ joinPath .chezmoi.homeDir ".local" "bin" }}
{{- if "windows" | eq .chezmoi.os }}
- name: PATH
  path: true
  action: append
  persist: false
  value:
    - {{ joinPath (env "PROGRAMFILES(X86)") "GnuWin32" "bin" }}
{{- end }}
