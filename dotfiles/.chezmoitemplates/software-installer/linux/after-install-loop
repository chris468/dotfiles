chezmoi:template:missing-key=zero
{{- $dotnetVersion := .software.versions.dotnet }}
{{- includeTemplate "software-installer/linux/install-package" (dict
      "name" "dotnet"
      "spec" (dict)
      "install" .profile.devtools
      "install_command" (cat
        "install-dotnet"
        (kindIs "slice" $dotnetVersion | ternary ($dotnetVersion | join " ") $dotnetVersion)
      )
    )
}}

{{ joinPath .paths.fzf "install" }} --xdg --no-update-rc --key-bindings --completion

if [ -n "$FAILED_TOOLS" ]
then
  echo $'\n'"Some tools were not installed due to missing dependencies or errors:"$'\n'"$FAILED_TOOLS" >&2
fi

