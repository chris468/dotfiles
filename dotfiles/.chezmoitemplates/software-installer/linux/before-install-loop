chezmoi:template:missing-key=zero
#!/usr/bin/bash

source {{ joinPath .paths.localInstallSbin "set-environment" }}

FAILED_TOOLS=

if ! command -v asdf &>/dev/null
then
  . {{ joinPath .paths.asdf "asdf.sh" }}
fi

function asdf-install {
  set -e
  name=$1 ; shift
  repo=$1 ; shift
  default_version=$1

  asdf plugin add $name $repo

  while [ $# -ne 0 ]
  do
    version=$1 ; shift
    asdf install $name $version
  done

  asdf global $name $default_version
}

function install-dotnet {
  set -e
  while [ $# -ne 0 ]
  do
    version=$1 ; shift
    {{ joinPath .paths.localInstallSbin "dotnet-install.sh" }} --channel "${version}.0"
  done
}
