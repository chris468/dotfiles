chezmoi:template:missing-key=zero
{{ $dotnetVersion := .software.versions.dotnet }}
{{ includeTemplate "software-installer/windows/install-package" (dict
      "name" "dotnet"
      "spec" (dict)
      "install" .profile.devtools
      "install_command" (cat
        "install-dotnet"
        (kindIs "slice" $dotnetVersion | ternary ($dotnetVersion | join ",") $dotnetVersion)
      )
    )
}}

{{ $fzfInstall := includeTemplate "fix-path" (dict
      "dot" .
      "path" (joinPath .paths.fzf "install") 
) }}
{{ .paths.bash }} -c '{{ $fzfInstall }} --xdg --no-update-rc --key-bindings --completion --no-fish --no-zsh'


