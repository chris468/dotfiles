local wezterm = require("wezterm")
local config = wezterm.config_builder()

config.color_scheme = "Dracula"
config.window_background_opacity = 0.97

config.font = wezterm.font({{ .font.family | quote }})
config.font_size = {{ .font.size }}

config.enable_tab_bar = true
config.hide_tab_bar_if_only_one_tab = false
config.window_decorations = "INTEGRATED_BUTTONS|RESIZE"

config.native_macos_fullscreen_mode = true

default_cwd = {{ .chezmoi.homeDir | quote }}

{{ if eq "windows" .chezmoi.os -}}
config.default_prog = { "pwsh.exe" }
{{- end }}

function hide_single_tab_in_full_screen(window, _)
  local window_dims = window:get_dimensions()
  local overrides = window:get_config_overrides() or {}

  if window_dims.is_full_screen ~= overrides.hide_tab_bar_if_only_one_tab then
    overrides.hide_tab_bar_if_only_one_tab = window_dims.is_full_screen
    window:set_config_overrides(overrides)
  end
end

wezterm.on('window-resized', hide_single_tab_in_full_screen)

return config
