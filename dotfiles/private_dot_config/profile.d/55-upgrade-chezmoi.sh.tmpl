#!/usr/bin/env bash

last_chezmoi_upgrade={{ .paths.unix.cacheHome }}/dotfiles/last-chezmoi-upgrade

[ -e "$last_chezmoi_upgrade" ] \
  && [ -n "$(find $last_chezmoi_upgrade -mtime 0)" ] \
  || (chezmoi upgrade \
      && mkdir -p "$(dirname $last_chezmoi_upgrade)" >& /dev/null \
      && touch $last_chezmoi_upgrade)
