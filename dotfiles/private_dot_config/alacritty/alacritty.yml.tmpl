live_config_reload: true

working_directory: {{ .chezmoi.homeDir }}

font:
  size: {{ .realConfig.font.size }}
  normal:
    family: {{ .realConfig.font.family | quote }}

key_bindings:
  - key: L
    mods: Control
    action: ReceiveChar
  - key: L
    mods: Alt
    action: ClearLogNotice
  - key: Return
    mods: Alt
    action: ToggleFullScreen
