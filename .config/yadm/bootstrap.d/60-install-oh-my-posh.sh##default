#!/bin/bash

function print_error {
    echo $@ >&2
}

command -v oh-my-posh >/dev/null \
    || ( mkdir -p ~/.local/bin \
        && curl https://github.com/JanDeDobbeleer/oh-my-posh/releases/latest/download/posh-linux-amd64 -Lo ~/.local/bin/oh-my-posh \
        && chmod +x ~/.local/bin/oh-my-posh ) \
    || print_error "Failed to install oh-my-posh"

