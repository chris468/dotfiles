#!/bin/bash

# git symbolic link to folder doesn't work on windows, so create it here.
if grep -qi "win" <<< "$OS" ; then
    if test ! -e "$LOCALAPPDATA/nvim" ; then
        (cd $config_dir && pwsh -NoProfile -Command '& { New-Item -Type SymbolicLink -Target $PWD/.config/nvim -Path "$env:LOCALAPPDATA/nvim" }')
    fi
fi
